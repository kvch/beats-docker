{% if image_flavor == 'oss' -%}
{%   set beat_suffix = '-oss' -%}
{% else -%}
{%   set beat_suffix = '' -%}
{% endif -%}

---
# This file was generated from templates/docker-compose.yml.j2
version: '2.1'
services:
{%- for beat in beats.split() %}
  {{ beat }}:
    image: {{ registry }}/beats/{{ beat }}{{ beat_suffix }}:{{ version }}
    container_name: {{ beat }}

    {%- if beat == 'auditbeat' %}
    cap_add:
      - AUDIT_CONTROL
    pid: host
    {%- endif %}

    {%- if beat == 'packetbeat' %}
    cap_add:
      - NET_RAW
      - NET_ADMIN
    {%- endif %}

    {% if beat == 'journalbeat' %}
    volumes:
      - /etc/machine-id:/etc/machine-id
      - /etc/hostname:/etc/hostname:ro
    security_opt:
      - seccomp: journalbeat-seccomp.json
    {%- endif %}
{% endfor %}
